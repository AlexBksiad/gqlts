{
  "compilerOptions": {
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "importHelpers": true,
    "rootDir": "src",
    "strict": false,
    "declaration": true,
    "target": "ES5",
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "./dist",
    "declarationMap": true,
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "lib": [
      "dom",
      "esnext.asynciterable"
    ],
    "skipLibCheck": true
  },
  "include": [
    "src",
    "src/version.json"
  ],
  "exclude": [
    "node_modules",
    "**/*.case.ts",
    "tests",
    "example",
    "dist",
    "**/__tests__",
    "esm"
  ]
}
