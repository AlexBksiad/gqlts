{
  "compilerOptions": {
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitAny": false,
    "strict": true,
    "declaration": true,
    "target": "ES2015",
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "lib": ["dom", "es2017", "esnext.asynciterable"],
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "**/*.case.ts", "tests", "example", "dist", "**/__tests__"]
}
